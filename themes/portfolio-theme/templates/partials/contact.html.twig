<div id="contact" class="flipper">
	<div class="front">
		<div class="leftSide">
			<div class="portrait">
				<img src="{{ url('theme://images/portrait.jpg') }}" alt="Portrait" />
			</div>
		</div>
		<div class="rightSide">
			<h2>Raoul Zander</h2>
			<h3>Coder</h3>
			<table class="skills">
				<caption>Skills</caption>


				{% macro skillRow(tagPageUrl, language, title, rating, taxonomy) %}
				    <tr class="skillRow">
				    	{% set numberOfProjects = taxonomy.findTaxonomy({'language': language})|length %}
						<td class="language"><a href="{{ tagPageUrl ~ "/:" ~ language }}" class="language"
							title="See all {{ numberOfProjects }} {{ title }} projects">{{ title }} <small class="numberOfProjects">{{ numberOfProjects }}</small></a></td>
						<td class="bar"><div class="barContainer"><div class="filledBar" style="width: {{ rating }}"></div></div></td>
						<td class="level"><span class="tooltip">{{ rating }}</span></td>
					</tr>
				{% endmacro %}

				{% from _self import skillRow %}

				{% set tagPageUrl = page.find("/tag").url %}

				{{ skillRow(tagPageUrl, "java", "Java", "85%", taxonomy) }}
				{{ skillRow(tagPageUrl, "html", "xHTML5", "95%", taxonomy) }}
				{{ skillRow(tagPageUrl, "css", "CSS3", "90%", taxonomy) }}
				{{ skillRow(tagPageUrl, "javascript", "JavaScript", "50%", taxonomy) }}
				{{ skillRow(tagPageUrl, "sql", "SQL", "60%", taxonomy) }}
			</table>
			<footer>
				<span class="glas icon-glas" title="Click to drop me a line.&#013;Sorry it's not copiable, but those spam bots ...">hello</span>
			</footer>
		</div>
	</div>
	<div class="back">
		<div class="rightSide">
			<h2>Raoul Zander</h2>
			<h3>Coder</h3>
			<p>
				I'm 26 years old, born in Berlin, living in Berlin but ready to move abroad. I like to code both visual stuff and abstract software architecture.

